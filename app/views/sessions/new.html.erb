<div class="flex justify-center mb-6">
  <div class="w-1/2 bg-yellow-200 rounded p-6">
  <%= form_with url: sessions_path, method: :post do |f| %>
    <%= f.label "Email Address", class: "form-label" %>
    <%= f.text_field :email, placeholder: "Enter Email address", required: true, class: "form-field"%>
    <%= f.label "Password", class: "form-label" %>
    <%= f.password_field :password, placeholder: "Password", required: true, class: "form-field"%>
    <%= f.submit "Log In", class: "form-submit" %>
  <% end %>
  </div>
</div>  

