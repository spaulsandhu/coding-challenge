<% form_with model: [@post, comment], class: "w-full" do |f| %>
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full px-3">
      <%= f.label :body, 'Event Name', class: 'form-label' %>
      <%= f.text_area :body, class: 'form-field' %>
      <%= display_inline_form_errors(comment, :name) %>
    </div>
  </div>  
<% end %>