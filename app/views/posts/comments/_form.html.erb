
  <%= form_with model: [@post, comment], 
      data: { action: "ajax:success->comments#onCommentCreate ajax:error->comments#onCommentError" }, 
      class: "rounded overflow-hidden shadow-lg w-3/4" do |f| 
  %>
    <div class="flex flex-wrap -mx-3 mb-6">
      <div class="text-lg font-bold py-2 px-6"> 
        <h3> <%= add_or_edit(comment) %> Comment </h3>
      </div>
      
      <div class="w-full p-6">
        <%= f.text_area :body, data: { target: "comments.newCommentField" }, rows: 3, class: 'form-field' %>
        <%= display_inline_form_errors(comment, :body) %>
        <%= f.submit 'Submit', class: 'form-submit' %>  
      </div>
    </div>  
  <% end %>
